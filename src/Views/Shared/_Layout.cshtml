                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@
                <nav class="nav">
                    <ul>
                        @if (User.Identity.IsAuthenticated)
                        {                           
                            <ul>
                                <li><a style="font-weight:800; font-size: 2em;" href="telainicial.cshtml">KIPA</a>
                                <li class="nav-item">
                                    <a class="title"> Olá, @User.Identity.Name </a>  @* <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Logout"> Sair</a> *@

                                </li>
                               
