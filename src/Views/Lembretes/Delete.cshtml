@model Kippa.Models.Lembrete

@{
    ViewData["Title"] = "Delete";
}

<div class="form">
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                <p style="font-weight: 500; font-size:2em;"> Nome do Lembrete </p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeLembrete)
            </dd>
            <dt class="col-sm-2">
                <p style="font-size:1.5em; font-weight: 400;"> Data do Lembrete </p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataLembrete)
            </dd>
            <dt class="col-sm-2">
                <p> Notificações </p>
            </dt>
            <dd class="col-sm-10">

                @Html.DisplayFor(model => model.Notificacoes)

            </dd>
            <dt class="col-sm-2">
                <p> ID do Usuário </p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.IdUsuario)
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLembrete" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à Lista</a>
    </form>
</div>


</div>